{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "lib": [
      "es2020"
    ],
    "removeComments": false,
    "target": "es3",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}